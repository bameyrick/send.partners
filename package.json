{
  "name": "app",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "nx",
    "postinstall": "node ./decorate-angular-cli.js && ngcc --properties es2020 browser module main",
    "start": "npm run pre-build && concurrently-await -n icons,colours,i18n,hashing,api,app,admin,storybook \"npm run icons:watch\" \"npm run colours:watch\" \"npm run i18n:watch\" \"npm run hash-assets:watch\" \"nx serve api\" \"nx serve\" \"nx serve admin\" \"nx storybook common-ui\"",
    "storybook": "npm run pre-build && concurrently-await -n icons,colours,i18n,hashing,storybook \"npm run icons:watch\" \"npm run colours:watch\" \"npm run i18n:watch\" \"npm run hash-assets:watch\" \"nx storybook common-ui\"",
    "build": "nx build",
    "test": "yarn nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all && eslint *.md --no-ignore",
    "tidy-clean": "ts-node build-scripts/clean.ts",
    "icons": "ts-node build-scripts/icons.ts",
    "icons:watch": "chokidar libs/common-ui/src/lib/svg/**/* -t 500 -c \"npm run icons\"",
    "colours": "ts-node build-scripts/colours.ts",
    "colours:watch": "chokidar libs/common-ui/src/lib/styles/settings/_colours.scss -t 500 -c \"npm run colours\"",
    "i18n": "ts-node build-scripts/i18n/initial.ts",
    "i18n:watch": "ts-node build-scripts/i18n/watch.ts",
    "hash-assets": "asset-hasher --from libs/common-ui/src/lib/raw-assets --to libs/common-ui/src/lib/assets --tsEnumPath libs/common-ui/src/lib/enums/asset-paths.ts --sassVariablesPath libs/common-ui/src/lib/styles/settings/_asset-paths.scss --removePaths libs/common-ui/src/lib/raw-assets/ libs/common-ui/src/lib/",
    "hash-assets:watch": "hash-assets --watch --ignoreInitial",
    "pre-build": "npm run tidy-clean && npm run icons && npm run colours && npm run i18n && npm run hash-assets",
    "pre-commit": "lint-staged",
    "prepare-husky": "husky install",
    "upgrade-interactive": "npm-check --update",
    "generate-stories": "nx g @nrwl/angular:stories common-ui",
    "mutations": "dotenv -- cross-var pg-migrations apply --directory migrations --database %DATABASE%",
    "migrations": "dotenv -- cross-var npx @databases/pg-schema-cli --database %DATABASE% --directory libs/common/src/lib/db-interfaces"
  },
  "lint-staged": {
    "*.ts": ["prettier --print-width 140 --single-quote --trailing-comma es5 --parser typescript --write", "eslint --fix"],
    "*.scss": ["prettier --print-width 140 --single-quote --parser css --write", "stylelint"],
    "*.json": ["prettier --print-width 140 --single-quote --trailing-comma es5 --parser json --write"],
    "*.md": ["prettier --write", "eslint --fix"]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "14.2.6",
    "@angular/cdk": "14.2.5",
    "@angular/common": "14.2.6",
    "@angular/compiler": "14.2.6",
