    "@qntm-code/utils": "^2.8.0",
    "@storybook/core-server": "^6.5.16",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "dotenv": "^16.0.3",
    "enum-keys-values-entries": "^1.0.4",
    "helmet": "^6.0.1",
